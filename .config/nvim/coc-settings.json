{
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "args": ["-log=verbose", "-index"],
            "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/", ".svn/", ".vscode/"]
        }
    },

    "python.condaPath": "/opt/anaconda2/bin/conda",
    "workspace.rootPatterns": [ ".git", ".svn", ".vscode", "compile_commands.json", ".hg", ".projections.json" ],

    "suggest.floatConfig": {
        "border": true,
        "borderhighlight": "FloatBoarder"
    },

    "suggest.virtualText": true,
    "codeLens.enable": true,
    "suggest.snippetIndicator": "",

    "diagnostic.warningSign": "",
    "diagnostic.errorSign": "",

    "list.source.grep.args": [
        "--ignore-file",
        "~/.ignore"
    ],

    "list.source.mru.excludePatterns": [
        "**/.git/*",
        "**/.svn/*",
        "**/bin/*",
        "**/build/*",
        "/tmp/*"
    ],

    "diagnostic-languageserver.linters": {
        "cppcheck": {
            "command": "cppcheck",
            "sourceName": "cppcheck",
            "isStdout": false,
            "isStderr": true,
            "debounce": 100,
            "offsetLine": 0,
            "offsetColumn": 0,
            "rootPatterns": [".ccls", "compile_commands.json", ".vscode"],
            "args": ["--project=compile_commands.json", "--enable=warning,performance,portability,missingInclude,information"],
            "ignore": [".git", "bin", "build"],
            "formatPattern": [
                "^([^:]+):(\\d+):(\\d+):\\s([^:]+):\\s+(.+)$",
                {
                    "sourceName": 1,
                    "sourceNameFilter": true,
                    "line": 2,
                    "column": 3,
                    "security": 4,
                    "message": 5
                }
            ],
            "securities": {
                "information": "info",
                "error": "error",
                "performance": "warning",
                "style": "warning"
            }
        }
    },

    "diagnostic-languageserver.filetypes": {
        "c": "cppcheck",
        "cpp": "cppcheck",
        "h": "cppcheck",
        "hpp": "cppcheck",
        "txx": "cppcheck"
    }
}
